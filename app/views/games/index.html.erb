<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table border="1">
  <thead>
    <tr>
      <th>â„–</th>
      <th>Name</th>
      <th>Developer</th>
      <th>Added date</th>
      <th>Expected release date</th>
      <th>Genre</th>
      <th>Description</th>
      <th>Trailer</th>
      <th>Platform</th>
      <th>Wanna play</th>
      <th></th>
    </tr>
  </thead>
  <% a=0 %>
  <tbody>
    <% @games.each do |game| %>
      <tr class=<%= cycle('even','odd') %>>
        <td><%= a+=1 %></td>
        <td><%= game.name_g %></td>
        <td><%= game.developer %></td>
        <td><%= game.date_added %></td>
        <td><%= game.release_date %></td>
        <td><%= game.genre %></td>
        <td><%= game.description %></td>
        <td><%= link_to "Watch trailer", game.trailer, :target => "_blank" %></td>
        <td><%= game.platform %></td>
        <td><%= game.wanna_play %></td>
        <td><%= link_to 'Show', game %>  <%= link_to 'Edit', edit_game_path(game) %>  <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

