<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table border="1">
  <thead>
    <tr>
      <th>Autor</th>
      <th>Name</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Reading time</th>
      <th>Rating</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class=<%= cycle('even','odd') %>>
        <td><%= book.autor %></td>
        <td><%= book.name %></td>
        <td><%= book.year %></td>
        <td><%= book.genre %></td>
        <td><%= book.reading_time %></td>
        <td><%= book.rate %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

